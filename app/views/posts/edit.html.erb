<% provide(:title, 'Мои статьи') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="span8">
      <h1>Редактирование статьи</h1>
      <%= form_for(@post) do |f| %>
        <%= render 'shared/error_messages', object: f.object  %>
        <div class="field">
          <%= f.label :name, "Название статьи:" %>
          <%= f.text_field :name %>
          <%= f.label :content, "Текст:" %>
          <%= f.text_area :content %>
        </div>
        <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
