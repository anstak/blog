<%= form_for(@newcomment) do |f| %>
  <%= render 'shared/error_messages', object: f.object  %>
  <div class="field">
    <%= f.hidden_field :post_id, value: @current_post.id %>
    <%= f.text_area :content, placeholder: "Напишите здесь ваш комментарий" %>
  </div>
  <%= f.submit "Комментировать", class: "btn btn-large btn-primary" %>
<% end %>
