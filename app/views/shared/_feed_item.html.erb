<li id="<%= feed_item.id %>">
  <span class="name">
    <%= link_to feed_item.name, post_path(feed_item.id) %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span style="float:right;">Теги:
  <% feed_item.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %> |
  <% end %>
  </span>
  <span class="timestamp">
    <%= feed_item.created_at.strftime("%d.%m.%y") %>
  </span>
  <% if current_user?(feed_item.user) %>
  | <%= link_to "удалить", feed_item, method: :delete, data: { confirm:"Вы уверены?" }, title: feed_item.name %>
  | <%= link_to "редактировать статью", edit_post_path(feed_item.id) %>
  <% end %>
</li>
