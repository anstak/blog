<% provide(:title, 'Регистрация') %>
<h1>Регистрация</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, "Имя пользователя:" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Адрес электронной почты:" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль:" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Ещё раз пароль:" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Зарегистрироваться", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
